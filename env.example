# YouTube RAG System Environment Configuration
# Copy this file to .env and fill in your actual values

# ===== API KEYS (REQUIRED) =====
# Google Gemini API Key (for embeddings only) - Get from https://aistudio.google.com/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Groq API Key (for text generation) - Get from https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Pinecone API Configuration - Get from https://app.pinecone.io
PINECONE_API_KEY=your_pinecone_api_key_here
# Note: Using Pinecone Serverless (region: us-east-1, configured in code)
PINECONE_INDEX_NAME=youtube-rag

# ===== OPTIONAL API KEYS =====
# LangSmith API Key for monitoring (optional) - Get from https://smith.langchain.com
LANGSMITH_API_KEY=your_langsmith_api_key_here

# ===== DATABASE =====
DATABASE_URL=sqlite:///./rag_system.db

# ===== VECTOR STORE =====
# Gemini embedding model (text-embedding-004 is best free tier option)
EMBEDDING_MODEL=models/text-embedding-004
EMBEDDING_DIMENSION=768

# ===== LLM SETTINGS =====
# Groq model configuration
LLM_MODEL_TYPE=groq
LLM_MODEL=llama-3.3-70b-versatile
LLM_TEMPERATURE=0.2
MAX_TOKENS=1000

# ===== RETRIEVAL SETTINGS =====
TOP_K=6
SIMILARITY_THRESHOLD=0.7
MMR_DIVERSITY_THRESHOLD=0.3

# ===== TRANSLATION =====
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ru,zh,ja,ko,ar,ur

# ===== EVALUATION =====
ENABLE_RAGAS=false
ENABLE_LANGSMITH=false

# ===== CHROME EXTENSION =====
BACKEND_URL=http://localhost:8000

# ===== DEVELOPMENT =====
DEBUG=false
LOG_LEVEL=INFO
